pipeline {
  environment {
    imagename = "abhishekkhandelwal/apache2"
    registryCredential = 'dockerhub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/abhishekkh47/groovy_repo1.git', branch: 'master', credentialsId: 'github_token'])

      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build imagename
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
             dockerImage.push('$BUILD_NUMBER')

          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "sudo docker rmi $imagename:$BUILD_NUMBER"

      }
    }
  }
}
